# 告诉EditorConfig插件，这是根文件，不用继续往上查找
root = true

# 匹配全部文件
[*]
# 结尾换行符，可选"lf"、"cr"、"crlf"
# CR（Carriage Return）表示回车
#
# LF（Line Feed）表示换行
#
#
# Dos和Windows采用回车+换行（CR+LF）表示下一行
# 而UNIX/Linux采用换行符（LF）表示下一行
# 苹果机(MAC OS系统)则采用回车符（CR）表示下一行
# end_of_line = lf
# 是否让文件以空行结束
insert_final_newline = true
# 删除行尾空格
trim_trailing_whitespace = true
# 设置字符集
charset = utf-8

# 匹配前端代码文件
[*.{js,html,css,json,yml}]
# 缩进风格，可选"space"、"tab"
indent_style = space
# 缩进的空格数
indent_size = 2
# tab的宽度
tab_width = 2

# 匹配py结尾的文件
[*.py]
# 缩进风格，可选"space"、"tab"
indent_style = space
# 缩进的空格数
indent_size = 4
# tab的宽度
tab_width = 4

# 以下匹配，类同
[Makefile]
indent_style = tab
# tab的宽度
tab_width = 4

